---

<SummaryCard
  title={menuDishesText[post.data.title]?.name}
  imgAlt={post.data.title}
  imgSrc={menuDishesText[post.data.title]?.image}
  description={menuDishesText[post.data.title]?.description}
>
  <div class="flex justify-end my-4">
    <Button href={`/blog/${post.slug}/`}>Add Dish &plus;</Button>
  </div>

  <div class="hidden sm:inline-block">
    <p class="poppins mt-2">tags:</p>
    <div class="flex justify-between items-center">
      <ul class="flex gap-4 mt-2">
        {
          post.data.tags.map((tag) => {
            return (
              <li>
                <a class="sanchez" href={`/blog/tags/${tag}/`}>
                  <Pill>{tag}</Pill>
                </a>
              </li>
            );
          })
        }
      </ul>
      {
        post.data.draft && (
          <span class="bg-green rounded-full border-2 py-1 px-4 text-sm border-black card-shadow">
            Draft
          </span>
        )
      }
    </div>
  </div>
</SummaryCard>
